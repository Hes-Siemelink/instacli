Input:
  url:
    description: Digital.ai Platform target
    choices:
      - name: Staging
        url: https://api.staging.digitalai.cloud
      - name: Production
        url: https://api.us.digitalai.cloud
    type: select one
    display: name
    value: url
  username: Username
  password:
    description: Password
    type: password
  id: Tenant ID
  name: Account name
As: connection

Add connection:
  target: Digital.ai Platform
  name: ${name}
  properties: ${connection}
